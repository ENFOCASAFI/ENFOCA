<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="view_move_form_inherited_select_nodomiciado" model="ir.ui.view">
		<field name="name">account.move.inherited.select.nodomiciado</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='l10n_latam_document_type_id']" position="after">
                <!-- <field name="pe_invoice_code" attrs="{'invisible':1}" /> -->
		<field name="nro_doc_id" attrs="{'invisible': [('pe_invoice_code', 'not in', ('91'))] }" />
		<!-- <field name="nro_doc_id" attrs="{'invisible': [('pe_invoice_code', 'not in', ('91'))], 'required':[('pe_invoice_code','in',['91'])]  }" /> -->           	               
                <!-- <field name="tipotrab_doc_nodoc" attrs="{'invisible': [('pe_invoice_code', 'not in', ('91'))], 'required':[('pe_invoice_code','in',['91'])]}" /> -->
				<field name="tipotrab_doc_nodoc_id" attrs="{'invisible': [('pe_invoice_code', 'not in', ('91'))], 'required':[('pe_invoice_code','in',['91'])]}" />
                <field name="doc_relac_nodomic" invisible = "1" />
				<field name="anio_dua" attrs="{'invisible': [('pe_invoice_code', 'not in', ('91'))] }" />

            </xpath>	        
			
		</field>
	</record>

	<!--  VISTA - FORM***** -->
	<record id="view_serv_nodomiciliado_form" model="ir.ui.view">
        <field name="name">account.sede.tree</field>
        <field name="model">tablasunat.nodocumentado</field>
        <field name="arch" type="xml">
            <form>
				<group>
                	<group>
						<field name="codigo" required ="1"/>
						<field name="name"/>
					</group>
				</group>
            </form>
        </field>
    </record>
	<!--  VISTA - TREE ***** -->
	<record id="view_serv_nodomiciliado_tree" model="ir.ui.view">
        <field name="name">account.sede.tree</field>
        <field name="model">tablasunat.nodocumentado</field>
        <field name="arch" type="xml">
            <tree>
              <field name="codigo"/>
              <field name="name"/>
            </tree>
        </field>
    </record>


	    <!-- ACCION DE VISTA LISTA - TREE - FORM***** -->
    <record id="action_documentos_serv_nodomiciliado" model="ir.actions.act_window">
        <field name="name">Documento Servicio No Domiciliado</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tablasunat.nodocumentado</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your Documents !
            </p>
        </field>
    </record>
	<!-- MENU HEREDADO QUE LLAMA A LA ACCION VISTA - TREE (action_documentos_pago) ***** -->
	<menuitem id="menu_documento_pago"
              name="Sunat Tabla 32 Mod. Serv."
              parent="account.account_invoicing_menu"
              sequence="1"
              action="action_documentos_serv_nodomiciliado"
              groups="account.group_account_manager" />

	

</odoo>
